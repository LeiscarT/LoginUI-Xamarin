<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginUI.MainPage"
             BackgroundColor="#035397"
             >

    <StackLayout VerticalOptions="Center">
        <Label Text="LOGIN" TextColor="White" HorizontalOptions="Center" FontSize ="Large" FontAttributes="Bold"></Label>
       
        <Frame BackgroundColor="White" WidthRequest="200" HeightRequest="100" >
            <StackLayout>
                <Entry Placeholder="Username"  ></Entry>
                <Entry Placeholder="Password" IsPassword="True" ></Entry>
                
            </StackLayout>
        </Frame>
        <Button Text="Login" TextColor="#035397" BorderColor="Blue" BackgroundColor="White" WidthRequest="50"></Button>
    </StackLayout>

</ContentPage>
