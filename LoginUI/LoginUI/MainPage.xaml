<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginUI.MainPage"
             BackgroundColor="DarkRed"
             >

    <StackLayout VerticalOptions="Center" Margin="20">
       
        <Image Source="logo.png"></Image>
        <Label Text="LOGIN" TextColor="White" HorizontalOptions="Center" FontSize ="20" FontAttributes="Bold"></Label>
        <Frame BackgroundColor="White"  HeightRequest="100" CornerRadius="20">
            <StackLayout >
                <Entry x:Name ="nameEntry" Placeholder="Username" PlaceholderColor="Black"></Entry>
                <Entry x:Name="passwordEntry" Placeholder="Password" IsPassword="True"  PlaceholderColor="Black"></Entry>
            </StackLayout>
        </Frame>
        <Button Text="Login" TextColor="DarkRed"  BackgroundColor="White"  Clicked="OnButtonClicked" FontAttributes="Bold" Margin="20 40"></Button>
    </StackLayout>

</ContentPage>
