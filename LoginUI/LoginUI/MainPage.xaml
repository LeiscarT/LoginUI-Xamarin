<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginUI.MainPage"
             BackgroundColor="#035397"
             >

    <StackLayout VerticalOptions="Center">
        <Label Text="LOGIN" TextColor="White" HorizontalOptions="Center" FontSize ="Large" FontAttributes="Bold"></Label>
        <Image Source="logo.png"></Image>
        <Frame BackgroundColor="White"  HeightRequest="100" >
            <StackLayout >
                <Entry x:Name ="nameEntry" Placeholder="Username" PlaceholderColor="Black" ></Entry>
                <Entry x:Name="passwordEntry" Placeholder="Password" IsPassword="True"  PlaceholderColor="Black"></Entry>
            </StackLayout>
            
        </Frame>
        <Button Text="Login" TextColor="#035397" BorderColor="White" BackgroundColor="White" HorizontalOptions="Center" Clicked="OnButtonClicked" ></Button>
    </StackLayout>

</ContentPage>
